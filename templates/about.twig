{% set bodyClass = entry.slug %}
{% set title = entry.title %}

{% extends '_layout' %}

{% block content %}
	
	<div class="container mx-auto mt-24">
		<h1 class="text-6xl uppercase font-bold text-center mb-6">About us</h1>
		
		<div class="contentBlocks">
			{% include '_contentBlocks' %}
		</div>
		
		<div class="team mt-16 grid grid-cols-4 gap-4 items-center">
			
			<h2 class="text-4xl uppercase font-bold text-center mb-4 col-span-2">Team</h2>
			
			{% for person in craft.entries.section('team').all %}
				<a href="{{ person.url }}">
					{% if person.portrait | length %}
						{% set img = person.portrait.one %}
						<img class="rounded-lg" src="{{ img.getUrl }}" alt="Portrait von {{ person.title }}"
						srcset="{% include '_srcset' %}"
						sizes="20vw">
						
					{% else %}
						{{ person.title }}
					{% endif %}
				</a>
			{% endfor %}
		</div>
	</div>

{% endblock %}
