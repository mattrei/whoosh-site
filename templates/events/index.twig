{% set bodyClass = "events" %}
{% extends '_layout' %}

{% block content %}
	
	<div class="container mx-auto mt-24">
		<h1 class="text-6xl uppercase font-bold text-center">Events</h1>
		
		<div class="flex justify-center my-12 ">
			<button id="showUpcomingEvents" class="px-2 m-2 font-semibold bg-blue text-white hover:bg-blue hover:text-white py-2 px-4 border border-blue rounded">Upcoming</button>
			<button id="showPastEvents" class="px-2 m-2 font-semibold bg-transparent text-blue hover:bg-blue hover:text-white py-2 px-4 border border-blue rounded">Past</button>
		</div>
		
		<ul id="eventsList" class="my-8 border border-black border-solid border-r-0 border-b-0 border-l-0" data-show="upcoming">
			{% set termine = craft.entries
				.section( 'termine' )
				.orderBy( 'startdatum asc' ) %}
			
			{#
			{% set termine = craft.entries
				.section('termine')
				.startdatum( '>=' ~ now | date('Y-m-d') )
				.orderBy( 'startdatum asc' ) %}
			#}
			
			{% for termin in termine.all %}
				{% include 'events/preview' %}
			{% endfor %}
		</ul>
	</div>

{% endblock %}
