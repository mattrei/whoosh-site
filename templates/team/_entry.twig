{% set bodyClass = "event" %}
{% set title = entry.title %}
{% extends '_layout' %}

{% block content %}
	
	<div class="container mx-auto mt-24">
		<h1 class="text-4xl uppercase font-bold text-center mb-12 max-w-3xl mx-auto">
			{{ entry.title }}
		</h1>
		
		<div class="md:flex items-center justify-center mb-8">
			<div class="flex-initial pr-6 mb-6">
				{% if entry.portrait | length %}
					<img class="rounded-lg max-w-xl mx-auto" src="{{ entry.portrait.one.getUrl() }}">
				{% endif %}
			</div>
		</div>
		
		
		<div class="contentBlocks">
			{% include '_contentBlocks' %}
		</div>
	</div>

{% endblock %}
